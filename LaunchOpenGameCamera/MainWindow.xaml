<Window x:Class="LaunchOpenGameCamera.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LaunchOpenGameCamera"
        mc:Ignorable="d"
        Title="MainWindow" Height="375" Width="400" ResizeMode="CanMinimize">
    <Grid Background="Black">
        <Image HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="373" Source="banner.png" Margin="10,10,0,0"/>
        <StackPanel HorizontalAlignment="Left" Height="220" Margin="10,115,0,0" VerticalAlignment="Top" Width="373">
            <ScrollViewer Name="Scroller" Margin="0,0,0,0" Background="Black" Height="179">
                <StackPanel>
                    <ItemsControl ItemsSource="{Binding ConsoleOutput, Mode=OneWay}" IsEnabled="False">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Path=.}" Foreground="#FFE0E0E0" FontFamily="Consolas"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <Button x:Name="CopyTextButton" Content="Copy Console Text" Height="25" FontFamily="Consolas" FontSize="10.667" Width="151" HorizontalAlignment="Right" Click="CopyTextButton_Click" />
                </StackPanel>
            </ScrollViewer>
            <Button x:Name="InjectButton" Content="Inject OpenGameCamera" Margin="0,0,0,0" Height="40" FontFamily="Consolas" FontSize="16" BorderBrush="#FFE0E0E0" Background="Black" Foreground="#FFE0E0E0" Click="InjectButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
